<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="employee_dashboard.EmployeeDashboard" owl="1">
        <t t-call-assets="web.assets_frontend" t-js="true"/>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <!-- Full-height and scroll fix -->
        <style>
            html, body {
                height: 100%;
                margin: 0;
                padding: 0;
                overflow-y: auto !important;
                background-color: #f8f9fa;
            }

            .dashboard-wrapper {
                padding: 30px 15px;
                min-height: 100%;
                box-sizing: border-box;
            }
        </style>

        <div class="dashboard-wrapper container-fluid">
            <!-- Dashboard Title -->
            <center><h1 class="mb-4" style="font-weight: bold;">Employee Dashboard</h1></center>

            <div class="row justify-content-center" style="gap: 30px;">
                <!-- Attendance Tile -->
                <div class="col-12 col-sm-6 col-md-6 col-lg-5">
                    <div class="card border rounded-4 text-center shadow-sm h-100" style="cursor: pointer;">
                        <div class="card-body p-3">
                            <center><h5 class="mb-4" style="font-weight: bold;">My Attendance</h5></center>
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                                <div class="d-flex align-items-center mb-3 mb-md-0">
                                    <div class="icon-box" style="background-color: #ff4d94; width: 65px; height: 65px; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                                        <i class="fa fa-calendar-check-o text-white" style="font-size: 30px;"></i>
                                    </div>
                                    <div class="text-start ps-3">
                                        <div class="stat_count_attendance" id="my_attendance" style="font-size: 16px; font-weight: bold;"></div>
                                    </div>
                                </div>
                                <div style="max-width: 250px; max-height: 250px;">
                                    <canvas id="attendanceChart" width="250" height="250"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Leave Tile -->
                <div class="col-12 col-sm-6 col-md-6 col-lg-5">
                    <div class="card border rounded-4 text-center shadow-sm h-100" style="cursor: pointer;">
                        <div class="card-body p-3">
                            <center><h5 class="mb-4" style="font-weight: bold;">My Leaves</h5></center>
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                                <div class="d-flex align-items-center mb-3 mb-md-0">
                                    <div class="icon-box" style="background-color: #ff4d94; width: 65px; height: 65px; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                                        <i class="fa fa-calendar-check-o text-white" style="font-size: 30px;"></i>
                                    </div>
                                    <div class="text-start ps-3">
                                        <div class="stat_count_attendance" id="my_leaves" style="font-size: 16px; font-weight: bold;"></div>
                                    </div>
                                </div>
                                <div style="max-width: 250px; max-height: 250px;">
                                    <canvas id="leaveChart" width="250" height="250"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Projects Table -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card border rounded-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="mb-4 text-center" style="font-weight: bold;">My Projects</h5>
                            <div class="table-responsive">
                                <table class="table table-striped" id="projectsTable">
                                    <thead>
                                        <tr>
                                            <th>Project</th>
                                            <th>Task</th>
                                            <th>Deadline</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody id="projectTableBody">
                                        <!-- JS will populate this -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </t>
</templates>
